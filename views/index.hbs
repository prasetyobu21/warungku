{{>navbarWarung}}

<div class="container">

    <div class="row my-3">
        {{# each products}}

        <div class="col-sm">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="{{image}}" alt="Card image cap" style="height: 200px;">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text">Rp {{price}}</p>
                    <p class="card-text">QTY: {{qty}}</p>
                    <p class="card-text"><i>{{seller.email}}</i></p>
                    <a href="/showProduct/{{_id}}" class="btn btn-warning">Add to Cart</a>
                </div>
            </div>
        </div>

        {{/each}}
    </div>
</div>